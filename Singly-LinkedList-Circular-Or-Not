// check singly linked list is circular or not (Method - 1)
#include<bits/stdc++.h>
using namespace std;
struct node
{
    int data;
    node *link;
};
node *createnode(int X)
{
    node *newnode = (node *)malloc(sizeof(node));
    newnode -> link = NULL;
    newnode -> data = X;
    return newnode;
}
void insertionAtTail(node **head,int X)
{
    node *temp = *head;
    node *newnode = createnode(X);
    if(*head == NULL){
        *head = newnode;
    }
    else{
        while(temp -> link != NULL){
            temp = temp -> link;
        }
        temp -> link = newnode;
    }
}
bool circularOrNot(node *head)
{   
    node *temp = head;
    if(head == NULL){
        return true;
    }
    do{
        temp = temp -> link;
    }
    while(temp != NULL && temp != head);
    if(temp == NULL){
        return false;
    }
    if(temp == head){
        return true;
    }
}
void display(node *head)
{
    node *temp = head;
    while(temp != NULL){
        cout<<temp -> data<<" ";
        temp = temp -> link;
    }
    cout<<endl;
}
int main()
{
    node *head = NULL;
    insertionAtTail(&head,21);
    insertionAtTail(&head,22);
    insertionAtTail(&head,23);
    insertionAtTail(&head,24);
    insertionAtTail(&head,25);
    insertionAtTail(&head,26);
    insertionAtTail(&head,27);
    display(head);
    cout<<circularOrNot(head);
}
