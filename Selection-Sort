#include<bits/stdc++.h>
using namespace std;
int print(int array[])
{
    for(int i = 0 ; i < 5 ; i++){
        cout<<array[i]<<" ";
    }
    cout<<endl;
}
void selectionSort(int array[],int i,int n)
{
    print(array);
    if(i == n -1){
        return ;
    }
    else{
        int min = i;
        for(int j = i+1 ; j < n ; j++){
            if(array[j] < array[min]){
                min = j;
            }
        }
        int temp = array[min];
        array[min] = array[i];
        array[i] = temp;
    }
    selectionSort(array,i+1,n);
}
int main()
{
    int n = 5;
    int array[n] = {578,40,340,343,456461};
    selectionSort(array,0,5);
}
