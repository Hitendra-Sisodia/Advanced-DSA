#include<bits/stdc++.h>
using namespace std;
void print(int s,int e,int mid)
{
    cout<<"start is:"<<s<<"\n";
    cout<<"End is:"<<e<<"\n";
    cout<<"Mid is:"<<mid<<"\n";
}
bool binarysearch(int arr[],int s,int e,int key)
{   
    int mid =(s+e)/2;
    print(s,e,mid);
    if(s>e){
        return false;
    }
    if(arr[mid] > key){
        e = mid - 1;
    }
    if(arr[mid] < key){
        s = mid + 1;
    }
    if(arr[mid] == key){
        return true;
    }
    else{
        bool finalans = binarysearch(arr,s,e,key);
        return finalans;
    }
}
int main()
{   
    int s = 0;
    int e = 5;
    int key = 20;
    int arr[e] = {4,5,6,7,20};
    cout<<binarysearch(arr,s,e,key);
}
